{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ConvertNum2Chinese",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:${command:cmake.launchTargetPath}
            "program": "${workspaceFolder}\\build\\example\\ConvertNum2Chinese.exe",
            // Place your args here
            "args": ["-l", "1234"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\build\\example",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}